<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_shape" >

        <ImageView
            android:id="@+id/imgMount"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="-0.5dp"
            android:layout_marginStart="-0.5dp"
            android:layout_marginEnd="-0.5dp"
            android:layout_marginBottom="25dp"
            android:contentDescription="@string/title_home"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imgMount"
            android:layout_toEndOf="@id/imgUser"
            android:background="@drawable/user_shape"
            android:layout_marginStart="-20dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:paddingStart="26dp"
            android:paddingEnd="8dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            tools:text="User Name" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUser"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/imgMount"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp"
            app:civ_fill_color="@android:color/white"
            android:layout_marginStart="10dp"
            tools:src="@tools:sample/avatars"
            android:layout_marginBottom="-24dp" />

        <TextView
            android:id="@+id/tvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgUser"
            android:layout_toEndOf="@id/imgUser"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="16dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="Event Title" />

        <TextView
            android:id="@+id/tvMountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEventTitle"
            android:layout_marginTop="6dp"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@android:color/black"
            tools:text="Mount Name" />

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMountName"
            android:layout_marginStart="16dp"
            tools:text="City, " />

        <TextView
            android:id="@+id/tvRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvCity"
            android:layout_below="@+id/tvMountName"
            tools:text="Region" />

        <TextView
            android:id="@+id/tvParticipant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCity"
            android:layout_marginStart="16dp"
            tools:text="100 Participant" />

        <TextView
            android:id="@+id/tvCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/imgMount"
            android:layout_alignEnd="@id/imgMount"
            android:background="@drawable/cost_shape"
            android:padding="8dp"
            android:textSize="12sp"
            android:textColor="@color/colorPrimaryDark"
            tools:text="FREE" />

        <TextView
            android:id="@+id/tvMontStart"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvDiv"
            android:layout_above="@id/tvDayStart"
            android:gravity="center"
            android:layout_marginBottom="-6dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="May"/>

        <TextView
            android:id="@+id/tvMonthEnd"
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvDayEnd"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="-6dp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            tools:text="May"/>

        <TextView
            android:id="@+id/tvDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvDayEnd"
            android:layout_below="@id/tvMonthEnd"
            android:textSize="20sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@android:color/black"
            android:text="-"/>

        <TextView
            android:id="@+id/tvDayStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tvDiv"
            android:layout_below="@id/tvMountName"
            android:textSize="26sp"
            android:textColor="@color/colorPrimary"
            tools:text="10"/>

        <TextView
            android:id="@+id/tvDayEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvMountName"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:textSize="26sp"
            android:textColor="@color/colorPrimary"
            tools:text="12"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvParticipant"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnInterested"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/colorPrimary"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/iam_interested" />

            <Button
                android:id="@+id/btnDetail"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textColor="@color/blueGray1"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:text="@string/more_info" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>