<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginBottom="12dp"
    app:cardElevation="0dp"  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:id="@+id/imgMount"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="-0.5dp"
            android:layout_marginStart="-0.5dp"
            android:layout_marginEnd="-0.5dp"
            android:contentDescription="@string/title_explore"
            android:scaleType="centerCrop"
            tools:src="@tools:sample/backgrounds/scenic"/>

        <TextView
            android:id="@+id/tvMountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMount"
            android:layout_marginTop="4dp"
            android:layout_marginStart="22dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            tools:text="Mount Name"/>

        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvMountName"
            android:layout_marginStart="22dp"
            tools:text="10000 mdpl" />

        <TextView
            android:id="@+id/tvCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvHeight"
            android:layout_marginStart="22dp"
            android:paddingBottom="8dp"
            tools:text="City, " />

        <TextView
            android:id="@+id/tvRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvCity"
            android:layout_below="@+id/tvHeight"
            tools:text="Region" />

        <Button
            android:id="@+id/btnDetail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/tvMountName"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorPrimary"
            android:drawableEnd="@drawable/ic_arrow_forward"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:text="@string/see_more"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>